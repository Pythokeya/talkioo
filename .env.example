# Database Configuration
DATABASE_URL=postgres://username:password@host:port/database

# Session Secret (used for cookie encryption)
SESSION_SECRET=your_secure_session_secret

# Environment (production/development)
NODE_ENV=production

# Port (optional, defaults to 5000)
PORT=5000

# Optional: Set this to true to enable additional security in production
ENABLE_HELMET=true

# Netlify Frontend Deployment Variables (only needed for Netlify frontend deployment)
# The URL of your backend when deploying the frontend to Netlify
# VITE_API_URL=https://your-backend-domain.com